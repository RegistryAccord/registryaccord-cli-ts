{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "bin"
    ]
}